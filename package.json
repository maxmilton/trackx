{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.jsx,.mjs,.ts,.tsx .",
    "lint:ts": "tsc --project ./tsconfig.lint.json",
    "serve": "docker compose --file docker-compose.dev.yml up --build",
    "setup": "./scripts/dev-setup.sh",
    "test": "TZ=UTC jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "7.18.5",
    "@babel/plugin-transform-modules-commonjs": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@maxmilton/stylelint-config": "0.0.10",
    "@testing-library/jest-dom": "5.16.4",
    "@types/babel__core": "7.1.19",
    "@types/jest": "28.1.2",
    "@types/node": "18.0.0",
    "@types/testing-library__jest-dom": "5.14.4",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "babel-preset-solid": "1.4.4",
    "esbuild": "0.14.46",
    "eslint": "8.18.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-unicorn": "42.0.0",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "jest-resolve": "28.1.1",
    "prettier": "2.7.1",
    "prettier-plugin-pkg": "0.14.0",
    "prettier-plugin-sh": "0.11.0",
    "prettier-plugin-sql": "0.8.0",
    "solid-js": "1.4.4",
    "solid-testing-library": "0.3.0",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.{cjs,js,jsx,mjs,ts,tsx}",
      "packages/http-status-codes/index.ts",
      "!packages/trackx-api/src/routes/__ROUTE_MANIFEST__.ts"
    ],
    "coverageProvider": "v8",
    "coverageReporters": [
      "text",
      "lcovonly"
    ],
    "resolver": "./jest-resolver.js",
    "testRegex": "\\.test\\.tsx?$",
    "transformIgnorePatterns": [
      "node_modules/(?!solid-js.*|.*(?<=.[tj]sx))$"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ]
  },
  "pnpm": {
    "overrides": {
      "source-map": "~0.8.0-beta.0"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh",
      "./node_modules/prettier-plugin-sql"
    ],
    "overrides": [
      {
        "files": [
          "*.test.tsx",
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ],
    "rules": {
      "function-no-unknown": null
    }
  }
}
